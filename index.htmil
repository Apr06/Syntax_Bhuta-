  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to bottom right,#030303, #400101);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }
    .container {
      text-align: center;
    }
    .envelope {
      width: 200px;
      height: 150px;
      background:#57030a;
      border-radius: 10px;
      position: relative;
      margin: 0 auto 20px;
      cursor: pointer;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: bold;
      font-size: 16px;
      text-shadow: 1px 1px 2px #000;
      z-index: 3;
      transition: transform 2s, background 2s;
    }
    .envelope:hover {
      transform: scale(1.05);
      background: #8a0d1d;
    }
    .envelope::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #d6d0c3 50%, transparent 50%);
      z-index: 1;
      border-radius: 10px;
      transition: transform 0.5s ease-in-out;
    }
    .open .envelope::before {
      transform: rotateX(180deg);
    }
    .message {
      display: none;
      background: #f2bbbb;
      border-radius: 12px;
      padding: 20px;
      max-width: 400px;
      margin: 0 auto;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      animation: fadeIn 1s forwards;
    }
    .open .message {
      display: block;
    }
    .images-wrapper {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
      opacity: 0;
      transition: opacity 2s ease;
    }
    .open .images-wrapper {
      opacity: 1;
    }
    .side-image {
      width: 150px;
      height: 150px;
      border-radius: 20px;
      object-fit: cover;
      animation: fadeIn 2s ease forwards;
    }
    .main-image {
      width: 300px;
      border: 3px solid black;
      box-shadow: 0 0 15px #fff;
      margin-top: 20px;
      animation: fadeIn 2s ease forwards;
    }
    @keyframes confetti {
      0% { transform: translateY(0) translateX(0); opacity: 1; }
      100% { transform: translateY(800px) translateX(100px); opacity: 0; }
    }
    .confetti {
      position: absolute;
      top: 0;
      left: 50%;
      width: 10px;
      height: 10px;
      background: gold;
      animation: confetti 7s infinite ease-in-out;
      opacity: 0;
      border-radius: 50%;
      box-shadow: 0 0 5px gold, 0 0 10px pink, 0 0 15px #ff69b4;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
